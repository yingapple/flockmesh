{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://flockmesh.dev/spec/schemas/policy-profile-version.schema.json",
  "title": "PolicyProfileVersion",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "generated_at",
    "profile_name",
    "rule_count",
    "document_hash",
    "file_path"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "v0"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "profile_name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]{2,80}$"
    },
    "rule_count": {
      "type": "integer",
      "minimum": 0
    },
    "document_hash": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$"
    },
    "file_path": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2048
    }
  }
}
