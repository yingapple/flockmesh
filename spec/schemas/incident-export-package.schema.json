{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://flockmesh.dev/spec/schemas/incident-export-package.schema.json",
  "title": "IncidentExportPackage",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "exported_at",
    "run_id",
    "workspace_id",
    "agent_id",
    "run_status",
    "policy_trace_summary",
    "run",
    "evidence",
    "signature"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "v0"
    },
    "exported_at": {
      "type": "string",
      "format": "date-time"
    },
    "run_id": {
      "type": "string",
      "pattern": "^run_[A-Za-z0-9_-]{6,64}$"
    },
    "workspace_id": {
      "type": "string",
      "pattern": "^wsp_[A-Za-z0-9_-]{6,64}$"
    },
    "agent_id": {
      "type": "string",
      "pattern": "^agt_[A-Za-z0-9_-]{6,64}$"
    },
    "run_status": {
      "type": "string",
      "enum": [
        "accepted",
        "running",
        "waiting_approval",
        "completed",
        "failed",
        "cancelled"
      ]
    },
    "policy_trace_summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "total",
        "allow",
        "escalate",
        "deny",
        "by_risk_tier",
        "by_effective_source"
      ],
      "properties": {
        "total": {
          "type": "integer",
          "minimum": 0
        },
        "allow": {
          "type": "integer",
          "minimum": 0
        },
        "escalate": {
          "type": "integer",
          "minimum": 0
        },
        "deny": {
          "type": "integer",
          "minimum": 0
        },
        "by_risk_tier": {
          "type": "object",
          "additionalProperties": {
            "type": "integer",
            "minimum": 0
          }
        },
        "by_effective_source": {
          "type": "object",
          "additionalProperties": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    },
    "run": {
      "$ref": "https://flockmesh.dev/spec/schemas/run-record.schema.json#"
    },
    "evidence": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "events",
        "audit"
      ],
      "properties": {
        "events": {
          "$ref": "#/$defs/evidence_stream"
        },
        "audit": {
          "$ref": "#/$defs/evidence_stream"
        }
      }
    },
    "signature": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "algorithm",
        "key_id",
        "payload_hash",
        "signature"
      ],
      "properties": {
        "algorithm": {
          "type": "string",
          "const": "HMAC-SHA256"
        },
        "key_id": {
          "type": "string",
          "pattern": "^exp_[A-Za-z0-9_-]{4,64}$"
        },
        "payload_hash": {
          "type": "string",
          "pattern": "^sha256:[a-f0-9]{64}$"
        },
        "signature": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      }
    }
  },
  "$defs": {
    "evidence_stream": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "total",
        "exported",
        "truncated",
        "items"
      ],
      "properties": {
        "total": {
          "type": "integer",
          "minimum": 0
        },
        "exported": {
          "type": "integer",
          "minimum": 0
        },
        "truncated": {
          "type": "boolean"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    }
  }
}
