{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://flockmesh.dev/spec/schemas/agent-profile.schema.json",
  "title": "AgentProfile",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "workspace_id",
    "role",
    "owners",
    "model_policy",
    "default_policy_profile",
    "status",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^agt_[A-Za-z0-9_-]{6,64}$"
    },
    "workspace_id": {
      "type": "string",
      "pattern": "^wsp_[A-Za-z0-9_-]{6,64}$"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120
    },
    "role": {
      "type": "string",
      "minLength": 1,
      "maxLength": 80
    },
    "owners": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^(usr|svc)_[A-Za-z0-9_-]{4,64}$"
      },
      "uniqueItems": true
    },
    "model_policy": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "provider",
        "model"
      ],
      "properties": {
        "provider": {
          "type": "string",
          "minLength": 1,
          "maxLength": 60
        },
        "model": {
          "type": "string",
          "minLength": 1,
          "maxLength": 120
        },
        "temperature": {
          "type": "number",
          "minimum": 0,
          "maximum": 2
        },
        "max_tokens": {
          "type": "integer",
          "minimum": 1,
          "maximum": 200000
        }
      }
    },
    "default_policy_profile": {
      "type": "string",
      "pattern": "^polprof_[A-Za-z0-9_-]{4,64}$"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "disabled",
        "quarantined"
      ]
    },
    "metadata": {
      "type": "object",
      "additionalProperties": {
        "type": [
          "string",
          "number",
          "boolean"
        ]
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
